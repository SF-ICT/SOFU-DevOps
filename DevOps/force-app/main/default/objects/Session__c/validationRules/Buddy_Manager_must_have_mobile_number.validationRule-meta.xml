<?xml version="1.0" encoding="UTF-8"?>
<ValidationRule xmlns="http://soap.sforce.com/2006/04/metadata">
    <fullName>Buddy_Manager_must_have_mobile_number</fullName>
    <active>true</active>
    <errorConditionFormula>AND(NOT(ISBLANK( Buddy__r.ManagerId )),ISBLANK(  Buddy__r.Manager.MobilePhone ))</errorConditionFormula>
    <errorMessage>Buddy cannot be set as they are missing a Manager or Manager mobile number</errorMessage>
</ValidationRule>
