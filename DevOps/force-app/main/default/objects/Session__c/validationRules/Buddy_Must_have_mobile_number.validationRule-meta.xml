<?xml version="1.0" encoding="UTF-8"?>
<ValidationRule xmlns="http://soap.sforce.com/2006/04/metadata">
    <fullName>Buddy_Must_have_mobile_number</fullName>
    <active>true</active>
    <errorConditionFormula>AND(NOT(ISBLANK(Buddy__c)),ISBLANK( Buddy__r.MobilePhone))</errorConditionFormula>
    <errorMessage>Assigned Buddy must have a mobile number set</errorMessage>
</ValidationRule>
